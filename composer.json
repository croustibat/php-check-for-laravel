{
    "name": "croustibat/php-check-for-laravel",
    "description": "Interactive check for outdated composer dependencies",
    "keywords": [
        "laravel",
        "composer",
        "dependencies",
        "outdated",
        "update",
        "ci",
        "security",
        "audit",
        "packages"
    ],
    "homepage": "https://github.com/croustibat/php-check-for-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Croustibat",
            "email": "me@croustib.at",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "illuminate/contracts": "^9.0|^10.0|^11.0",
        "laravel/prompts": "^0.1",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Croustibat\\PhpCheckForLaravel\\": "src/",
            "Croustibat\\PhpCheckForLaravel\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Croustibat\\PhpCheckForLaravel\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-php-check-for-laravel --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Croustibat\\PhpCheckForLaravel\\PhpCheckForLaravelServiceProvider"
            ],
            "aliases": {
                "PhpCheckForLaravel": "Croustibat\\PhpCheckForLaravel\\Facades\\PhpCheckForLaravel"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
